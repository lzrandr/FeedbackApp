@model IEnumerable<Feedback.Domain.Models.TeacherViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Teachers List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-info form-control text-white">Add a new Teacher</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">

            <table class="table table-striped border">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TeacherName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TeacherDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeacherName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeacherDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.TeacherId" class="btn-danger btn-sm">Delete</a>
                            <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.TeacherId" class="btn btn-success btn-sm text-white">Edit</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>
