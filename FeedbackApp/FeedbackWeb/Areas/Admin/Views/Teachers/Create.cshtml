@model Feedback.Domain.Models.TeacherViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add a new Teacher</title>

</head>
<body>
    <div class="border cointainer" style="padding:30px;">
        <h1 class="main-titel">Add a new Teacher</h1>
        <form method="post" enctype="multipart/form-data" asp-action="Create">

            <div asp-validation-summary="All"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="TeacherName"></label>
                </div>
                <div class="col-6">
                    <input asp-for="TeacherName" />
                    <span asp-validation-for="TeacherName"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="TeacherDescription"></label>
                </div>
                <div class="col-6">
                    <input asp-for="TeacherDescription" />
                    <span asp-validation-for="TeacherDescription"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Email" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" value="Submit" class="btn btn-primary form-control" />
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>