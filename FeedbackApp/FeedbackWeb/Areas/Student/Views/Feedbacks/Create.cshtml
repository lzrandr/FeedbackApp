@model Feedback.Domain.Models.FeedbackViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>

</head>

<body>
    <div class="border cointainer" style="padding:30px;">
        <h1 class="main-titel">Add a new feedback</h1>
        <form method="post" enctype="multipart/form-data" asp-action="Create">

            <div asp-validation-summary="All"></div>
            <div class="form-group row">
                <div class="col-1>
                    <label asp-for="Course">Course</label>
                </div>
                <div class="col-3">
                    <select asp-for="CourseId" asp-items="ViewBag.CourseId">
                        <option selected="selected" value="">Select</option>
                    </select>
                    <span asp-validation-for="CourseId"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="TheFeedback">Feedback</label>
                    <textarea asp-for="TheFeedback"></textarea>
                    <span asp-validation-for="TheFeedback"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="FeedbackWriterName">Your Name</label>
                    <input asp-for="FeedbackWriterName" />
                    <span asp-validation-for="FeedbackWriterName"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="FeedbackWriterEmail">Your Email</label>
                    <input asp-for="FeedbackWriterEmail" />
                    <span asp-validation-for="FeedbackWriterEmail"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 ">
                    <input type="submit" value="Submit" class="btn btn-primary form-control" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>